{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "joy-iptv-player",
  "version": "0.1.0",
  "identifier": "com.joy.iptv",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "resizable": true,
        "maximized": true,
        "title": "Joy IPTV Player",
        "minWidth": 1100,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
